pipeline {
    agent {
     docker {
        image 'python:latest' 
        args '-v $HOME/.m2:/root/.m2'
        args '--user root'
    }
    }
stages{
    stage (build){
    
    steps{

      echo 'Compiling Vote app'
      dir ('vote'){
           sh 'pip install -r requirements.txt'
        }
        
    }
 }


    stage (Test){
  
    steps{

      echo 'Test Vote app'
      dir('vote'){
       sh 'nosetests -v'
                
                }
        
    }
}
}
}