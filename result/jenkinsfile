pipeline {
    agent none
stages{
    stage (build){
      agent {
     docker {
        image 'node:erbium-stretch' 
      
      }
    }
    
    steps{

      echo 'Compiling result app'
      dir ('result'){
           sh 'npm install'
        }
        
    }
 }


    stage (Test){
      agent {
     docker {
        image 'node:erbium-stretch' 
      
    }
    }
  
    steps{

      echo 'Compiling result app'
      dir('result'){
                  sh 'npm install'
                  sh 'npm test'
                }
        
    }
}
    stage ('docker-Package') {
        agent {
                docker { image 'docker:20.10.12-alpine3.15' }
            }
    steps{
        echo 'Running unit test on worker App'
        script{
            docker.withRegistry('https://index.docker.io/v1', 'test') {

            def resultImaage = docker.build("aderock/result:v1", "./result")
            resultImage.push()
            resultImage.push("${env.BRANCH_NAME}")
                    
                

                }
                
            }
        }
    }
    
}
}